            <div id="rooms_dates" class="dates_list"></div>

            <div class="nav_right">
                <a events="onclick=navigate" ofs="7">7 Days &gt;&gt;</a>
            </div>
        </div>
        <div class="rooms_list" id="rooms_list"></div>
    </div>
</tpl>